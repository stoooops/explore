{
  "name": "explore",
  "version": "0.0.1",
  "files": [
    "/contracts/**/*.sol",
    "/build/contracts/*.json",
    "!/contracts/mocks/**/*"
  ],
  "scripts": {
    "build": "yarn hardhat compile",
    "clean": "yarn hardhat clean",
    "coverage": "yarn hardhat coverage",
    "format": "yarn prettier --config ../.prettierrc --write .",
    "format:check": "yarn prettier --config ../.prettierrc --check .",
    "lint": "yarn eslint --ext .ts . && yarn solhint contracts/**/*.sol",
    "start:hardhat": "yarn hardhat node",
    "test": "yarn hardhat test --bail"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.4",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.5",
    "@openzeppelin/contracts": "^4.8.2",
    "@openzeppelin/test-environment": "^0.1.9",
    "@typechain/hardhat": "^4.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.10",
    "@types/sinon-chai": "^3.2.9",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "erc721a": "^4.2.3",
    "eslint": "^8.36.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-promise": "^6.1.1",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.3",
    "hardhat": "^2.12.6",
    "hardhat-gas-reporter": "^1.0.9",
    "merkletreejs": "^0.3.9",
    "prettier": "^2.8.7",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "web3-eth-abi": "^1.9.0"
  },
  "license": "MIT"
}
